<div class="row">
  <div class="col-md-8">
    <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-heading">
      <h5>  <%= link_to "Title: #{post.title}", post_path(post)%></h5>
      </div>
      <div class="panel-body">
        <p>
        Body: <%= post.body %>
      </p>
      <p>Posted on:
        <%= post.created_at.strftime('%v')%>
      </p>
      </div>
      </div>
    <% end %>
  </div>
</div>
