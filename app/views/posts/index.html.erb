<% @posts.each do |post| %>
  <h3><%= post.title %></h3>
  <p><%= post.body %></p>
  <h5>Tags: <%= post.tags.map { |tag| tag.name }.join(", ") %></h5>
  <h5>Category: <%= post.category.name if post.category %></h5>
  <br>

  <%= link_to "View", post_path(post) %>
  <%= link_to "Edit", edit_post_path(post) %>
<% end %>
