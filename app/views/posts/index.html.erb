<table class='table table-bordered'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Category</th>
      <th>Tags</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to "#{post.title}", post_path(:id => post.id) %></td>
        <td><%= post.category.name if post.category %></td>
        <td><%= post.tags.map{|tag| tag.name}.join(", ") %></td>
        <td><%= link_to "Edit", edit_post_path(:id => post.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>