<% @page_title = "| Posts" %>

<div class="row">
	<div class="col-xs-12 text-center">
		<h1>Posts Index Page</h1>
	</div>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  	<%= link_to "Create New Post", new_post_path, :class => "btn btn-primary btn-lg center-block" %>
  </div>
</div>

<div class="stats-table">
  <table class="table table-striped">
    <tr>
      <% @column_headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
				<td><%= post.title %></td>
        <td><%= post.category.name if post.category %></td>
				<td><%= post.tags.map{|tag| tag.name }.join(", ") %></td>
        <td>
          <%= link_to 'show', post_path(:id => post.id) %>
        </td>
        <td>
          <%= link_to 'edit', edit_post_path(:id => post.id) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
