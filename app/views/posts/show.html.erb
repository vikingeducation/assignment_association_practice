<div class="post-title">
  <h1>Post <%= post.id %>: <%= post.title %></h1>
</div>

<div class="post-body">
  <h2>Post body:</h2>
  <p><%= post.body %></p>
</div>

<div class="post-category">
  <h2>Category:</h2>
  <p><%= post.category.name %></p>
</div>
<div class="post-tags">
  <h2>Tags:</h2>
  <ul class="tag-list">
    <% post.tags.each do |tag| %>
        <li><%= tag.name %></li>
    <% end %>
  </ul>
</div>
<div class="comment-list">
  <h2>Comments:</h2>
  <ul>
    <% post.comments.each do |c| %>
    <li>
      <p><%= "#{c.user.name} says:" %></p>
      <p><%= c.body %></p>
    </li>
    <% end %>
  </ul>
</div>