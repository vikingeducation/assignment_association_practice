<h1>Show Post</h1>
<%= content_tag(:p,@post.title) %>
<%= content_tag(:p,@post.body) %>
<%= link_to "Edit this post",edit_post_path(@post) %>

<h1>Show Tags</h1>
<ul>
<% @post.tags.each do |tag| %>
  <%= content_tag(:li,tag.name)%>
<% end %>
</ul>

<h1>Category</h1>
<%= content_tag(:p, @post.category.name) %>

<h1>Comments</h1>
<ul>
<% @post.comments.each do |comment| %>
  <%= content_tag(:li, comment.body) %>
<% end %>
</ul>
