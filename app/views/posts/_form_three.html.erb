<div class="row">
  <div class="col-md-12">

    <div class="row">
      <div class="col-md-12">
        <h2>Form Three</h2>
      </div>
    </div>

    <%= form_for @post do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body %>

      <%= f.collection_select(:tag_ids, Tag.all, :id, :name, {}, multiple: true) %> 
      <%= f.submit %>
    <% end %>
  </div>
</div> 