<table class="table table-bordered table-striped">
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Created</th>
		<th>Edit</th>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td><%= link_to "#{post.id}", post_path(post.id) %></td>
			<td><%= post.title %></td>
			<td><%= post.created_at %></td>
			<td><%= link_to "Edit", edit_post_path(post.id) %></td>
		</tr>
	<% end %>
</table>