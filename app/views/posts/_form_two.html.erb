<div class="row">
  <div class="col-md-12">

    <%= form_for @post do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body %>

      <%= f.label :category_id %>
