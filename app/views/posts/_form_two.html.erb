<div class="row">
  <div class="col-md-12">

    <%= form_tag posts_path do %>

      <%= label_tag :title %>
      <%= text_field_tag "post[title]", @post.title %>

      <%= label_tag :body %>
      <%= text_field_tag "post[body]", @post.body %>

      <%= label_tag :category_id %>
      <%= select_tag "post[category_id]", options_for_select(@author_options, @post.category.name), prompt: "Choose" %> 

      <%= submit_tag %>
    <% end %>
  </div>
</div> 