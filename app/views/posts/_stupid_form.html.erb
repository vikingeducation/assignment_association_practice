<%= form_for @post do |post_fields| %>

  <%= post_fields.label(:title) %>
  <%= post_fields.text_field(:title) %>
  <br/>
  <%= post_fields.label(:body) %>
  <%= post_fields.text_area(:body) %>
  <br/>
  <%= post_fields.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>
  <br/>
  <%= post_fields.collection_radio_buttons(:category_id, Category.all, :id, :name) %>
  <input id="blank" type="radio" value="blank" name="post[category_id]">
  <label for="blank">No Category</label>
  <br/>
  <%= post_fields.collection_select(:category_id, Category.all, :id, :name, { include_blank: true }, id: "select", class: "category") %>
  <br />
  <%= post_fields.collection_select(:tag_ids, Tag.all, :id, :name, {}, multiple: true) %>
  <br/>
  <%= post_fields.submit %>

<% end %>
