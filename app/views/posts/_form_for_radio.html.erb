<%= form_for @post do |p| %>

<%= p.label :title %>
<%= p.text_field :title, class: 'form-control' %>
<br>
<%= p.label :body %>
<%= p.text_area :body, class: 'form-control' %>
<br>
<%= p.label :tag_ids, 'Tag' %>
<%= p.collection_check_boxes(:tag_ids, Tag.all, :id, :name, class: 'form-control') %>
<br><br>
<%= p.label :category_id, 'Category' %>
<%= p.collection_radio_buttons(:category_id, Category.all, :id, :name, class: 'form-control') %>
<br><br>

<%= p.submit class: 'form-control' %>

<% end %>