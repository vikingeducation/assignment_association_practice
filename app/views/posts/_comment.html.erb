<h2> Add a Comment </h2>
  <%= post_fields.fields_for :comments do |cf| %>

    <div class="form-group">
      <%= cf.label :body %><br>
      <%= cf.text_area :body %>
    </div>
    <br>

    <div class="form-group">
        <%= cf.label :user_id %>
        <%= cf.collection_select :user_id, User.all, :id, :name %>
    </div>

    <% if cf.object.persisted? %>
      <%= cf.label :_destroy, "Delet this comment?" %><br>
      <%= cf.check_box :_destroy %><br>
    <% end %>

<% end %>