<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :body %>
  <%= f.text_area :body %>
  <br>

  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <br>

  <%# f.label :category_id %>
  <%# f.collection_radio_buttons :category_id, Category.all, :id, :name %>
  <br>

  <%= f.label :tag_ids %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <br>

  <h4>Comments</h4>
  <%= f.fields_for :comments do |comment_fields| %>
    <%= comment_fields.label :author_id %>
    <%= comment_fields.collection_select :author_id, User.all, :id, :name %>
    <br>

    <%= comment_fields.label :body %>
    <%= comment_fields.text_area :body %>
    <br>

    <%= comment_fields.label :_destroy, 'Delete comment?' %>
    <%= comment_fields.check_box :_destroy %>
  <% end %>

  <%= f.submit %>
<% end %>