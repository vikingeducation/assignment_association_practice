
<!-- nested comment fields in new/edit post -->


<h2>Comments Section</h2>


<!-- nested comment input fields -->

  <%= post.fields_for :comments do |comment| %>

    <div class="row">
      <div class="col-md-12">  
        <br>
        <%= comment.label "-------------------------------" %><br>
        <%= comment.label "Enter or modify comment:" %><br>

        <%= comment.label :body %><br>
        <%= comment.text_area :body, size: "60x5",
            placeholder: "Enter body contents here" %><br><br>
      </div>
    </div>

    <!-- dropdown collection author input -->
    <div class="row">
      <div class="col-md-12">
        <%= comment.label "Select an author" %><br>
        <%= comment.collection_select(:author_id, User.all, :id, :name, {include_blank: true}, class: "col-md-3") %><br><br>
      </div>
    </div>

    <!-- note: post_id set by back end -->

    <!-- destroy comment checkbox option -->
    <% if comment.object.persisted? %>
      <%= comment.label :_destroy, "Delete this comment?" %>
      <%= comment.check_box :_destroy %>
    <% end %>

  <% end %>

<!-- back to submit post button -->

